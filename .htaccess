# Configuración Apache para OBS360
RewriteEngine On
RewriteBase /

# Proxy para API del CMS (Node.js)
RewriteCond %{REQUEST_URI} ^/api
RewriteRule ^api/(.*)$ http://localhost:3000/api/$1 [P,L]

# Forzar minúsculas en /blog (evitar cache de mayúsculas)
RewriteCond %{REQUEST_URI} ^/Blog [NC]
RewriteRule ^Blog(.*)$ /blog$1 [R=301,L,NE]

# Asegurar que /blog/ cargue index.html
DirectoryIndex index.html index.php

# Habilitar compresión GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache de navegador para mejor performance
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imágenes - Cache largo
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # CSS y JavaScript - Cache medio
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fuentes - Cache largo
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML - Sin cache (siempre actualizado)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Headers de Cache Control
<IfModule mod_headers.c>
    # HTML - No cache
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires 0
    </FilesMatch>
    
    # CSS y JS - Cache con revalidación
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=2592000, must-revalidate"
    </FilesMatch>
    
    # Imágenes - Cache largo
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Fuentes - Cache largo
    <FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # ETag para validación
    Header unset ETag
    FileETag None
</IfModule>

# Seguridad - Ocultar archivos que empiezan con punto
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Permitir .well-known para SSL
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_URI} !^/\.well-known/
    RewriteRule ^\.well-known/ - [L]
</IfModule>

# Prevenir acceso a archivos sensibles
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# DirectoryIndex - Asegurar que index.html se cargue
DirectoryIndex index.html index.php

# Protección adicional para /blog/ - Headers noindex para bots
<IfModule mod_headers.c>
    <If "%{REQUEST_URI} =~ m#^/blog/#">
        Header set X-Robots-Tag "noindex, nofollow, noarchive, nosnippet"
    </If>
    <If "%{REQUEST_URI} =~ m#^/admin/#">
        Header set X-Robots-Tag "noindex, nofollow, noarchive, nosnippet"
    </If>
</IfModule>

